<?xml version='1.0' encoding='utf-8'?>
<widget id="vision.irisoft.eyechart" version="1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EyeChart</name>
    <description>
        A free easy-to-use digital eye chart.
    </description>
    <author email="support@irisoft.vision" href="http://www.irisoft.vision">
        Irisoft
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        
        <allow-intent href="market:*" />
        <icon src="/res/icon/android/icon_128.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
</widget>
